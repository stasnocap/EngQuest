{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://polyglot-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Authentication": {
    "Authority": "http://polyglot-idp:8080/realms/polyglot",
    "RequireHttpsMetadata": false,
    "ClientId": "polyglot-auth-server-client",
    "ClientSecret": "xuDEVboJgNmrk2npmXZ4BmjeYSYP01C3"
  }
}
