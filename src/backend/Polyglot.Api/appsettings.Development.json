{
  "ConnectionStrings": {
    "Database": "Host=polyglot-db;Port=5432;Database=polyglot;Username=postgres;Password=postgres;",
    "Cache": "polyglot-redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://polyglot-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Authentication": {
    "Audience": "account",
    "ValidIssuer": "http://polyglot-idp:8080/realms/polyglot",
    "MetadataUrl": "http://polyglot-idp:8080/realms/polyglot/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "Keycloak": {
    "BaseUrl": "http://polyglot-idp:8080",
    "AdminUrl": "http://polyglot-idp:8080/admin/realms/polyglot/",
    "TokenUrl": "http://polyglot-idp:8080/realms/polyglot/protocol/openid-connect/token",
    "AdminClientId": "polyglot-admin-client",
    "AdminClientSecret": "UZDmbNxWmV4TlpaCRcju6pMRsyuV3er1",
    "AuthClientId": "polyglot-auth-client",
    "AuthClientSecret": "3E3yvXaYppoYBF3Ir6DgtEzADKKzSurZ"
  },
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  }
}
